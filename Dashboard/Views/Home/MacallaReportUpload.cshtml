@{
    Layout = null;
    string lastRefresh = ViewBag.LastRefresh;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Macalla Report Upload</title>
</head>
<body>
    <div>
        <h4>@Html.DisplayFor(modelItem => lastRefresh)</h4>
    </div>

    <script type="text/javascript">
        function refresh() {
            setTimeout(function () {
                location.reload();
            }, 82800000);
        }
        refresh();
    </script>
</body>
</html>
