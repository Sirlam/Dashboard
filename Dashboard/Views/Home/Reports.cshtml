@using Dashboard.Utils
@{
    ViewBag.Title = "Reports";
    List<ReportUtil.Report> reports = ViewBag.Report;
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
                <h2></h2>
            </hgroup>
        </div>
    </section>
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h4>Reports</h4>
            <hr />
        </div>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label for="SelectedApplication" class="col-sm-2">Application:</label>
                <div class="col-sm-10">
                    <select class="form-control" id="SelectedApplication" name="SelectedApplication">
                        <option>Macalla</option>
                        <option>RIB</option>
                        <option>NIP-Outgoing</option>
                        <option>NIP-Incoming</option>
                        <option>NEFT-Outgoing</option>
                        <option>NAPS</option>
                        <option>EBILLS</option>
                        <option>FEP</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="StartDate" class="col-sm-2">Start Date:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control datepicker-here" data-position="bottom left" data-language="en" name="StartDate" id="StartDate">
                </div>

                <label for="EndDate" class="col-sm-2">End Date:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control datepicker-here" data-position="bottom left" data-language="en" id="EndDate" name="EndDate">
                </div>
            </div>
            <p>
                <button type="submit" value="View" class="btn btn-info">View</button>
                <button type="button" id="export" class="btn btn-danger">Download Excel</button>
            </p>

        }
            

    </div>

    <div class="row">
        <div class="col-sm-12">
            <div>
                <table class="table table-hover" id="reportTable">
                    <thead>
                        <tr>
                            <th>State Code</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>AffiliateCode </th>
                            <th>TransCount </th>
                            <th>Volume </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (reports != null)
                        {
                            foreach (var report in reports)
                            {
                                <tr>
                                    <td class="col-sm-2"><b>@Html.DisplayFor(modelItem => report.StateCode)</b></td>
                                    <td class="col-sm-3"><b>@Html.DisplayFor(modelItem => report.StateDesc)</b></td>
                                    <td class="col-sm-2"><b>@Html.DisplayFor(modelItem => report.Category)</b></td>
                                    <td class="col-sm-2"><b>@Html.DisplayFor(modelItem => report.AffiliateCode)</b></td>
                                    <td class="col-sm-2 text-right"><b>@Html.DisplayFor(modelItem => report.TransCount)</b></td>
                                    <td class="col-sm-2 text-right"><b>@Html.DisplayFor(modelItem => report.Volume)</b></td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>