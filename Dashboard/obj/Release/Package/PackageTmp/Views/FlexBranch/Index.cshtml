@using Dashboard.Utils
@{
    ViewBag.Title = "FlexBranch";
    List<FlexBranchStateSummary> flexBranchStateSummaries = ViewBag.FlexBranch;
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
                <h2></h2>
            </hgroup>
        </div>
    </section>
}
<div class="container">
    <div class="row">
        <h4>
            @{ var today = DateTime.Now.ToString("dd-MMM-yyyy");}
            Date: @Html.DisplayFor(modelItem => today)
        </h4>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div>
                <h3 class="text-primary">FlexBranch</h3>
                <table class="table table-striped table-condensed table-bordered">
                    <thead>
                        <tr>
                            <th>Branch Code</th>
                            <th>Branch Name</th>
                            <th>Total Transactions</th>
                            <th>Module</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var summary in flexBranchStateSummaries)
                        {
                            <tr>
                                <td class="col-sm-3"><b>@Html.DisplayFor(modelItem => summary.BranchCode)</b></td>
                                <td class="col-sm-4"><b>@Html.DisplayFor(modelItem => summary.BranchName)</b></td>
                                <td class="col-sm-3 text-warning text-right"><b>@Html.DisplayFor(modelItem => summary.TotalTransaction)</b></td>
                                <td class="col-sm-2"><b>@Html.DisplayFor(modelItem => summary.TransactionModule)</b></td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>

    </div>
</div>

@section scripts
{
    <script>
        function refresh() {
            setTimeout(function () {
                location.reload();
            }, 120000);
        }
        refresh();
    </script>
}